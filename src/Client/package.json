{
  "name": "website",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "author": "Andre Morise",
  "packageManager": "pnpm@10.10.0",
  "scripts": {
    "dev": "pnpm --filter=website dev",
    "build": "pnpm --filter=website build",
    "build:sample": "pnpm --filter=sample build",
    "typecheck": "tsc --noEmit",
    "format": "pnpm biome check --write",
    "lint": "pnpm biome lint",
    "test": "pnpm -r test",
    "test:website": "pnpm --filter=website test",
    "test:sample": "pnpm --filter=sample test"
  },
  "devDependencies": {
    "@biomejs/biome": "catalog:dev",
    "@types/node": "catalog:dev",
    "globals": "catalog:dev",
    "typescript": "catalog:dev",
    "vite": "catalog:dev",
    "lefthook": "^1.11.12"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}